@model List<NextFurniture.Models.DAL.Entities.WhyUs>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Neden Biz?</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Neden Biz Kısmı <small>Düzenleme Ekranı</small></h3>
                    </div>
                    <form method="post">
                        @foreach (var item in Model)
                        {
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="Title">Başlık:</label>
                                    <input type="text" name="@item.HeadTitle" value="@item.HeadTitle" class="form-control" id="Title">
                                </div>
                                <div class="form-group">
                                    <label for="Title1">1. Neden Başlığı:</label>
                                    <input type="text" name="@item.ReasonTitle1" value="@item.ReasonTitle1" class="form-control" id="Title1">
                                </div>
                                <div class="form-group">
                                    <label for="Desc1">1. Neden Açıklaması:</label>
                                    <textarea rows="5" name="@item.ReasonDescription1" class="form-control" id="Desc1">@item.ReasonDescription1</textarea>
                                </div>
                                <div class="form-group">
                                    <label for="Title2">2. Neden Başlığı:</label>
                                    <input type="text" name="@item.ReasonTitle2" value="@item.ReasonTitle2" class="form-control" id="Title2">
                                </div>
                                <div class="form-group">
                                    <label for="Desc2">2. Neden Açıklaması:</label>
                                    <textarea rows="5" name="@item.ReasonDescription2" class="form-control" id="Desc2">@item.ReasonDescription2</textarea>
                                </div>
                                <div class="form-group">
                                    <label for="Title3">3. Neden Başlığı:</label>
                                    <input type="text" name="@item.ReasonTitle3" value="@item.ReasonTitle3" class="form-control" id="Title3">
                                </div>
                                <div class="form-group">
                                    <label for="Desc3">3. Neden Açıklaması:</label>
                                    <textarea rows="5" name="@item.ReasonDescription3" class="form-control" id="Desc3">@item.ReasonDescription3</textarea>
                                </div>
                            </div>
                        }
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Güncelle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>