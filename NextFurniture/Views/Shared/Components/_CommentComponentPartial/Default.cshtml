@model List<NextFurniture.Models.DAL.Entities.Comment>
@{
    double star;
}
<div class="bg-light w-100 overflow-hidden" id="testimonials">
    <div class="container py-vh-6">
        <div class="row d-flex justify-content-center">
            <div class="col-12 col-lg-10 col-xl-8 text-center">
                <h2 class="display-6">Diğer İnsanlar Bizim Hakkımızda Ne Düşünüyor?</h2>
                <p class="lead">Diğer insanların yorumlarını önemseyenler için... Google, Facebook ve diğer platformlarda insanların bizim için yaptığı yorumları görüntüleyebilirsiniz.</p>
            </div>
            <div class="col-12 mt-4">
                <div class="row row-cols-1 row-cols-md-2 g-5 d-flex align-items-center">


                    @foreach (var item in Model)
                    {
                        star = item.Star;
                        <div class="col-12 col-lg-6 col-xl-4" data-aos="fade-right">
                            <div class="card p-4 mt-3 border-0">
                                <div class="card-body">
                                    <div class="text-dark py-2 fs-3">

                                        @if (star % 1 != 0)
                                        {
                                            @for (int i = 0; i < star - 1; i++)
                                            {
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                                                    <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                                                </svg>
                                            }
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-half" viewBox="0 0 16 16">
                                                <path d="M5.354 5.119 7.538.792A.516.516 0 0 1 8 .5c.183 0 .366.097.465.292l2.184 4.327 4.898.696A.537.537 0 0 1 16 6.32a.548.548 0 0 1-.17.445l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256a.52.52 0 0 1-.146.05c-.342.06-.668-.254-.6-.642l.83-4.73L.173 6.765a.55.55 0 0 1-.172-.403.58.58 0 0 1 .085-.302.513.513 0 0 1 .37-.245l4.898-.696zM8 12.027a.5.5 0 0 1 .232.056l3.686 1.894-.694-3.957a.565.565 0 0 1 .162-.505l2.907-2.77-4.052-.576a.525.525 0 0 1-.393-.288L8.001 2.223 8 2.226v9.8z" />
                                            </svg>
                                        }
                                        else
                                        {
                                        @for (int i = 0; i < star; i++)
                                        {
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                                                <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                                            </svg>
                                        }
                                        }
                                    </div>
                                    <blockquote class="blockquote">
                                        <p>"@item.Description"</p>
                                    </blockquote>
                                    <div class="d-flex justify-content-between border-top pt-3">
                                        <div>
                                            <span class="h6 fw-5">@item.Name</span><br>
                                            <small class="text-muted">@item.Title</small>
                                        </div>
                                        <img src="@item.ImgUrl" width="48" height="48" class="rounded-circle" alt="" data-aos="fade">
                                    </div>
                                </div>
                            </div>
                        </div>
                    }


                </div>
            </div>

        </div>
    </div>
</div>