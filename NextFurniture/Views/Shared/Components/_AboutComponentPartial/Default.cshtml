@model List<NextFurniture.Models.DAL.Entities.About>
<div class="py-vh-4 bg-gray-100 w-100 overflow-hidden" id="aboutus">
    <div class="container">
        @foreach (var item in Model)
        {
            <div class="row d-flex justify-content-between align-items-center">
                <div class="col-lg-6">
                    <div class="row gx-5 d-flex">
                        <div class="col-md-11">
                            <div class="shadow ratio ratio-16x9 rounded bg-cover bp-center align-self-end" data-aos="fade-right" style="background-image: url(@item.ImgUrl1);--bs-aspect-ratio: 50%;">
                            </div>
                        </div>
                        <div class="col-md-5 offset-md-1">
                            <div class="shadow ratio ratio-1x1 rounded bg-cover mt-5 bp-center float-end" data-aos="fade-up" style="background-image: url(@item.ImgUrl2);">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="col-12 shadow ratio rounded bg-cover mt-5 bp-center" data-aos="fade-left" style="background-image: url(@item.ImgUrl3);--bs-aspect-ratio: 150%;">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">

                    <h3 class="py-5 border-top border-dark" data-aos="fade-left">@item.Title</h3>
                    <p data-aos="fade-left" data-aos-delay="200">
                        @item.Description
                    </p>


                </div>
            </div>
        }
    </div>
</div>