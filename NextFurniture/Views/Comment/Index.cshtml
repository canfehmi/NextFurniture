@model List<NextFurniture.Models.DAL.Entities.Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Yorumlar</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <h3 class="card-title">Yorum Listesi</h3>
            </div>
            <div class="col-md-6 justify-content-end d-flex">
                <a href="/Comment/NewComment" class="btn btn-primary">Yeni Yorum Ekle</a>
            </div>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Ad & Soyad</th>
                    <th>Yorum</th>
                    <th>Puan</th>
                    <th>Düzenle</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.Star</td>
                        <td><a href="/Comment/Edit/@item.Id" class="btn btn-warning">Düzenle</a></td>
                    </tr>
                }

            </tbody>
            <tfoot>
                <tr>
                    <th>ID</th>
                    <th>Ad & Soyad</th>
                    <th>Yorum</th>
                    <th>Puan</th>
                    <th>Düzenle</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <!-- /.card-body -->
</div>

